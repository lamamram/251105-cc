      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.bashrc)",
      "Bash(git add:*)",
      "Bash(git commit -m:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
